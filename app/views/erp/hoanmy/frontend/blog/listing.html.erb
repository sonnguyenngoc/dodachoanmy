<div class="wt-bnr-inr overlay-wraper" style="background-image:url(/hoanmy/images/background/breadcrumb-banner.png);">
    <div class="overlay-main bg-black opacity-07"></div>
    <div class="container">
        <div class="wt-bnr-inr-entry">
            <h1 class="text-white">TIN CHUYÊN NGÀNH</h1>
        </div>
    </div>
</div>                       
<div class="bg-gray-light p-tb15">
    <div class="container">
        <ul class="wt-breadcrumb breadcrumb-style-2">
            <li>
                <%= link_to '<i class="fa fa-home"></i> Trang Chủ'.html_safe, erp_hoanmy.root_path, title: 'Quay về trang chủ' %>
            </li>
            <li>Tin Chuyên Ngành</li>
        </ul>
    </div>
</div>
<div class="section-full p-t20 p-b20">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="portfolio-wrap wt-blog-grid-2">
                        <% (0..5).each do |blog| %>
                            <div class="post masonry-item col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="blog-post blog-grid date-style-3">
                                    <div class="wt-post-media wt-img-effect zoom-slow">
                                        <%= link_to image_tag('/hoanmy/images/blog/grid/pic1.jpg', alt: ''), erp_hoanmy.blog_detail_path, title: '' %>
                                    </div>
                                    <div class="wt-post-info p-tb20 p-m20 bg-white">
                                        <div class="wt-post-title ">
                                            <h3 class="post-title">
                                                <%= link_to 'Các hệ tọa độ dùng trong xây dựng', erp_hoanmy.blog_detail_path, title: '' %>
                                            </h3>
                                        </div>
                                        <div class="wt-post-text">
                                            <p class="text-justify">Giới thiệu các hệ tọa độ dùng trong xây dựng Trong xây dựng vị trí của các hạng mục công trình, các kết cấu…</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="pagination-bx col-lg-12 clearfix ">                                
                        <ul class="custom-pagination pagination">
                           <li><a href="#">&laquo;</a></li>
                           <li class="active"><a href="#">1</a></li>
                           <li><a href="#">2</a></li>
                           <li><a href="#">3</a></li>
                           <li><a href="#">4</a></li>
                           <li><a href="#">5</a></li>
                           <li><a href="#">&raquo;</a></li>
                        </ul>                                
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <aside class="side-bar">
                    <div class="widget bg-white  recent-posts-entry">
                        <h4 class="widget-title">TƯ VẤN - KHẢO SÁT ĐO ĐẠC</h4>
                        <div class="section-content">
                            <div class="wt-tabs tabs-default border">
                                <div class="tab-content">                                    
                                    <div class="tab-pane active">
                                        <div class="widget-post-bx">
                                            <% (0..8).each do |blog| %>
                                                <div class="widget-post clearfix bg-gray">
                                                    <div class="wt-post-media">
                                                        <%= link_to image_tag('/hoanmy/images/blog/grid/pic1.jpg', alt: ''), erp_hoanmy.blog_detail_path, title: '' %>
                                                    </div>
                                                    <div class="wt-post-info">
                                                        <div class="wt-post-header">
                                                            <h6 class="post-title">
                                                                <%= link_to 'Đo đạc, cắm mốc xác định ranh giới khu đất', erp_hoanmy.blog_detail_path, title: '' %>
                                                            </h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="widget widget_gallery mfp-gallery">
                        <h4 class="widget-title">THƯ VIỆN ẢNH</h4>
                        <ul>
                            <% (0..11).each do |gallery| %>
                                <li>
                                    <div class="wt-post-thum">
                                        <%= link_to image_tag('/hoanmy/images/latest-projects/pic1-small.jpg', alt: ''),
                                                    '/hoanmy/images/latest-projects/pic1-large.jpg', title: '', class: 'mfp-link' %>
                                    </div>
                                </li>
                            <% end %>
                        </ul>                       
                    </div>
                </aside>
            </div>
        </div>
    </div>
</div>