<div class="wt-bnr-inr overlay-wraper" style="background-image:url(/hoanmy/images/background/breadcrumb-banner.png);">
    <div class="overlay-main bg-black opacity-07"></div>
    <div class="container">
        <div class="wt-bnr-inr-entry">
            <h1 class="text-white">THƯ VIỆN ẢNH</h1>
        </div>
    </div>
</div>                       
<div class="bg-gray-light p-tb15">
    <div class="container">
        <ul class="wt-breadcrumb breadcrumb-style-2">
            <li>
                <%= link_to '<i class="fa fa-home"></i> Trang Chủ'.html_safe, erp_hoanmy.root_path, title: 'Quay về trang chủ' %>
            </li>
            <li>Thư Viện Ảnh</li>
        </ul>
    </div>
</div>

<div class="section-full p-t20 p-b20">
    <div class="container">
        <div class="section-head text-center">
            <h2 class="text-uppercase">Thư Viện Ảnh</h2>
            <div class="wt-separator-outer">
                <div class="wt-separator style-square">
                    <span class="separator-left bg-primary"></span>
                    <span class="separator-right bg-primary"></span>
                </div>
            </div>            
        </div>
        <% if @galleries.count > 0 %>
            <div class="filter-wrap p-tb15">
                <ul class="masonry-filter link-style  text-uppercase">
                    <li class="active"><a data-filter="*" href="javascript:void(0)">Tất cả</a></li>
                    <% @galleries.each do |gallery| %>
                        <li><a data-filter=".gallery-<%= gallery.id %>" href="javascript:void(0)"><%= gallery.name %></a></li>
                    <% end %>
                </ul>
            </div>
            <div class="row">
                <div class="portfolio-wrap mfp-gallery no-col-gap">
                    <% @galleries.each do |gallery| %>
                        <% gallery.gallery_images.each do |gallery_image| %>
                            <div class="masonry-item gallery-<%= gallery.id %> col-lg-4 col-md-4 col-sm-6 col-xs-6">
                                <div class="wt-gallery-bx p-a15">
                                    <div class="wt-thum-bx wt-img-overlay5 wt-img-effect blurr">
                                        <a href="javascript:void(0);">
                                            <%= image_tag gallery_image.image_url.medium, alt: gallery.name %>
                                        </a>
                                        <div class="overlay-bx">
                                            <div class="overlay-icon">
                                                <a href="<%= gallery_image.image_url.large %>" class="mfp-link">
                                                    <i class="fa fa-arrows-alt wt-icon-box-xs"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        <% else %>
            <div class="alert alert-warning">
                <strong>Thông báo: </strong>Nội dung thư viện ảnh đang được Hoàn Mỹ Surveyors cập nhật.
            </div>
        <% end %>
    </div>
</div>