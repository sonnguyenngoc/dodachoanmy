<header class="site-header header-style-6">
    <div class="top-bar bg-primary">
        <div class="container">
            <div class="row">
                <div class="clearfix">							
                    <div class="wt-topbar-left">
                        <ul class="list-unstyled e-p-bx">
                            <li><i class="fa fa-compass"></i>Công Ty TNHH Đầu Tư Dịch Vụ Xây Dựng Hoàn Mỹ</li>
                            <li><i class="fa fa-envelope"></i><%= mail_to 'ddhoanmybaria@gmail.com', 'ddhoanmybaria@gmail.com', title: '' %></li>
                            <li><i class="fa fa-phone"></i><%= link_to '(+84) 98 643 4384', 'tel:(+84) 98 643 4384', title: '' %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-bar header-middle bg-white">
        <div class="container">
            <div class="logo-header">
                <%= link_to image_tag('/hoanmy/images/logo.png', alt: ''), erp_hoanmy.root_path, title: '' %>
            </div>
            <div class="header-info">
                <ul>
                    <li>
                        <div>
                            <div class="icon-sm">
                                <span class="icon-cell text-primary"><i class="flaticon-placeholder"></i></span>
                            </div>
                            <div class="icon-content">
                                <strong>ĐỊA CHỈ VĂN PHÒNG</strong>
                                <span>
                                    <%= link_to '24 Nguyễn Đình Chiểu, Phường Phước Hiệp, TP. Bà Rịa<br>Tỉnh Bà Rịa - Vũng Tàu, Việt Nam'.html_safe,
                                                erp_hoanmy.about_us_path,
                                                title: '24 Nguyễn Đình Chiểu, Phường Phước Hiệp, TP. Bà Rịa Tỉnh Bà Rịa - Vũng Tàu, Việt Nam' %>
                                </span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div>
                            <div class="icon-sm">
                                <span class="icon-cell  text-primary"><i class="flaticon-smartphone"></i></span>
                            </div>
                            <div class="icon-content">
                                <strong>SỐ ĐIỆN THOẠI</strong>
                                <span><%= link_to '(+84) 98 643 4384', 'tel:(+84) 98 643 4384', title: '(+84) 98 643 4384' %></span>
                            </div>
                        </div>
                    </li>
                    <li class="btn-col-last">
                        <a class="site-button text-uppercase radius-sm font-weight-700" href="javascript:void(0);">HỒ SƠ NĂNG LỰC</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="sticky-header main-bar-wraper">
        <div class="main-bar header-botton nav-bg-secondry">
            <div class="container">
                <!-- NAV Toggle Button -->
                <button data-target=".header-nav" data-toggle="collapse" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">MOBILE MENU</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- MAIN Nav -->
                <div class="header-nav navbar-collapse collapse ">
                    <ul class=" nav navbar-nav">
                        <% if params[:controller] == "erp/hoanmy/frontend/home" && params[:action] == "index" %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Trang Chủ', erp_hoanmy.root_path, title: 'Trang Chủ' %>
                        </li>
                        
                        <% if params[:controller] == "erp/hoanmy/frontend/information" && params[:action] == "about_us" %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Giới Thiệu', erp_hoanmy.about_us_path, title: 'Giới Thiệu' %>
                        </li>
                            
                        <% if params[:controller] == "erp/hoanmy/frontend/service" && (params[:action] == "consult_listing") || (params[:action] == "consult_detail") %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Tư Vấn Đo Đạc', erp_hoanmy.consult_listing_path, title: 'Tư Vấn Đo Đạc' %>
                        </li>
                            
                        <% if params[:controller] == "erp/hoanmy/frontend/service" && (params[:action] == "procedure_listing") || (params[:action] == "procedure_detail") %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Thủ Tục Đất Đai', erp_hoanmy.procedure_listing_path, title: 'Thủ Tục Đất Đai' %>
                        </li>
                            
                        <% if (params[:controller] == "erp/hoanmy/frontend/project" && (params[:action] == "listing")) ||
                              (params[:controller] == "erp/hoanmy/frontend/project" && (params[:action] == "detail")) %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Dự Án Thực Hiện <i class="fa fa-chevron-down"></i>'.html_safe, erp_hoanmy.project_listing_path, title: 'Dự Án Thực Hiện' %>
                            <ul class="sub-menu">
                                <li><%= link_to 'Đang Thực Hiện', erp_hoanmy.project_listing_path, title: 'Dự Án Đang Thực Hiện' %></li>
                                <li><%= link_to 'Đã Hoàn Thành', erp_hoanmy.project_listing_path, title: 'Dự Án Đã Hoàn Thành' %></li>
                            </ul>
                        </li>
                            
                        <% if (params[:controller] == "erp/hoanmy/frontend/gallery" && (params[:action] == "listing")) ||
                              (params[:controller] == "erp/hoanmy/frontend/gallery" && (params[:action] == "detail")) %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Thư Viện Ảnh', erp_hoanmy.gallery_listing_path, title: 'Thư Viện Ảnh' %>
                        </li>
                        
                        <% if (params[:controller] == "erp/hoanmy/frontend/blog" && (params[:action] == "listing")) ||
                              (params[:controller] == "erp/hoanmy/frontend/blog" && (params[:action] == "detail")) %>
                            <li class="active">
                        <% else %>
                            <li>
                        <% end %>
                            <%= link_to 'Tin Chuyên Ngành', erp_hoanmy.blog_listing_path, title: 'Tin Chuyên Ngành' %>
                        </li>                                                                          
                    </ul>
                </div>
            </div>
        </div>
    </div>          
</header>