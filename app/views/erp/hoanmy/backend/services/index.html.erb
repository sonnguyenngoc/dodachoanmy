<% content_for :title do %>
    <%= t('.services') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-gavel"></i> <%= t('.services') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_hoanmy.new_backend_service_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_hoanmy.list_backend_services_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_hoanmy_services.name'
        }
    ],
    actions: [
    ],
    filters: [
        {
            text: t('.is_consultant'), name: 'erp_hoanmy_services.category', value: Erp::Hoanmy::Service::CONSULTANT, checked: false
        },
        {
            text: t('.is_procedure'), name: 'erp_hoanmy_services.category', value: Erp::Hoanmy::Service::PROCEDURE, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.category'), name: 'category', value: true, checked: true
        },
        {
            text: t('.is_show'), name: 'is_show', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_hoanmy_services.created_at', sort_direction: 'desc' }
) %>