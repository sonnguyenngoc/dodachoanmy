<% content_for :title do %>
    <%= t('.projects') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-address-book"></i> <%= t('.projects') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_hoanmy.new_backend_project_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_hoanmy.list_backend_projects_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_hoanmy_projects.name'
        }
    ],
    actions: [
    ],
    filters: [
        {
            text: t('.is_processing'), name: 'erp_hoanmy_projects.status', value: Erp::Hoanmy::Project::PROCESSING, checked: false
        },
        {
            text: t('.is_completed'), name: 'erp_hoanmy_projects.status', value: Erp::Hoanmy::Project::COMPLETED, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.investor'), name: 'investor', value: true, checked: true
        },
        {
            text: t('.address'), name: 'address', value: true, checked: true
        },
        {
            text: t('.start_time'), name: 'start_time', value: true, checked: true
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_hoanmy_projects.created_at', sort_direction: 'desc' }
) %>