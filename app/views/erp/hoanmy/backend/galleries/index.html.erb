<% content_for :title do %>
    <%= t('.galleries') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-image"></i> <%= t('.galleries') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_hoanmy.new_backend_gallery_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_hoanmy.list_backend_galleries_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_hoanmy_galleries.name'
        }
    ],
    actions: [
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.description'), name: 'description', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_hoanmy_galleries.created_at', sort_direction: 'desc' }
) %>