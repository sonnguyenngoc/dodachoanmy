<% content_for :title do %>
    <%= @gallery.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_hoanmy.backend_galleries_path %>">
    <i class="fa fa-image"></i> <%= t('.galleries') %>
    </a> / <%= @gallery.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_hoanmy.new_backend_gallery_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @gallery.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', gallery: @gallery %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>